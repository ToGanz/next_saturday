<%= form_for(@event) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.label :title %>
  <%= f.text_field :title, class: 'form-control', placeholder: "Event Name"  %>

  <%= f.label :date %>
  <%= f.datetime_field :date, class: 'form-control' %>

  <%= f.text_area :content, class: 'form-control', placeholder: "Description" %>
  
  <%= f.submit "Create Event", class: "btn btn-primary" %>

<% end %>